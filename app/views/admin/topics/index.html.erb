<%= render "common/alerts", object: nil %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-6">スレッドタイトル</th>
      <th class="col-md-1">記事数</th>
      <th class="col-md-3">投稿日</th>
      <th class="col-md-2">管理</th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, [:admin, topic] %></td>
        <td><%= topic.articles.count %></td>
        <td><%= topic.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
        <td>
          <%= link_to "編集", [:edit, :admin, topic], class: "btn btn-info btn-sm" %>
          <%= link_to "削除", [:admin, topic], method: :delete, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @topics %>
