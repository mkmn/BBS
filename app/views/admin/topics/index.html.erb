<%= render "common/alerts", object: nil %>

<table id="threads">
  <thead>
    <tr>
      <th>スレッドタイトル</th>
      <th>記事数</th>
      <th class="time">投稿日</th>
      <th>管理</th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, [:admin, topic] %></td>
        <td><%= topic.articles.count %></td>
        <td class="time"><%= topic.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
        <td><%= link_to "編集", [:edit, :admin, topic] %> | <%= link_to "削除", [:admin, topic], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @topics %>
